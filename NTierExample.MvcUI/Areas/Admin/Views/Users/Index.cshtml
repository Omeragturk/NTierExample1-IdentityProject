@{
}

@model List<UserListVm>

<div class="row">
    <button>
        <a asp-area="Admin" asp-controller="Users" asp-action="create">
            Create New
        </a>
    </button>
</div>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>UserName</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.LastName</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <button>
                            <a asp-area="admin" asp-controller="users" asp-action="details" asp-route-id="@user.Id">
                                Detail
                            </a>
                        </button>
                        <button>
                            <a asp-area="admin" asp-controller="users" asp-action="edit" asp-route-id="@user.Id">
                                Edit
                            </a>
                        </button>
                        <button>
                            <a asp-area="admin" asp-controller="users" asp-action="delete" asp-route-id="@user.Id">
                                Delete
                            </a>
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>